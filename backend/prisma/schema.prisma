generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// The Blueprint
model Workflow {
  id        String   @id @default(uuid())
  name      String
  steps     Json     // Stores array of { prompt, model, criteria }
  createdAt DateTime @default(now())
  executions Execution[]
}

// The History
model Execution {
  id         String   @id @default(uuid())
  workflowId String
  status     String   // "PENDING", "COMPLETED", "FAILED"
  results    Json     // Stores the output of each step
  createdAt  DateTime @default(now())
  
  workflow   Workflow @relation(fields: [workflowId], references: [id])
}